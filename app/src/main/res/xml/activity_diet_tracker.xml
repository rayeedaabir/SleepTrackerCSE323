<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title Text -->
    <TextView
        android:id="@+id/diet_tracker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet Tracker"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"/>

    <!-- EditText for Food Name -->
    <EditText
        android:id="@+id/food_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter food name"
        android:textSize="18sp"
        android:padding="10dp"/>

    <!-- Search Button -->
    <Button
        android:id="@+id/search_food_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Food"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <!-- TextView to display calories -->
    <TextView
        android:id="@+id/calories_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories: "
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"/>

</LinearLayout>
